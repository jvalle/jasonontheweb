extends layout

block content
	.content
		ul#articles
			- each article in articles
				li.article
					h2.title
						a(href="/blog/"+article.postUrl)!= article.title
					.created-at posted on #{ article.created_at.getMonth() + 1 }/#{ article.created_at.getDate() }/#{ article.created_at.getFullYear() }
					.article-body!= article.body
